<div class="col-md-4 pb-3 ">
  <div class="card">
    <div class="card-body">
      <div class="card  box-shadow">
        <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %> 
        <div class="card-body">
          <p class="card-text"><%= link_to portfolio_item.title , portfolio_path(portfolio_item)%> <%= portfolio_item.subtitle %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'view' ,portfolio_path(portfolio_item),class:"btn btn-sm btn-outline-secondary"%>
               <%= link_to 'Edit' ,edit_portfolio_path(portfolio_item),class:"btn btn-sm btn-outline-secondary" %>
            </div>
            <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now )%> ago </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

