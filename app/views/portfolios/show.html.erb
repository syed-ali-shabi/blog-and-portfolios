<div class="container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag @portfolio_item.main_image if @portfolio_item.main_image.present? %> 
		</div>
		<div class="col-md-5">
			<h1><%=@portfolio_item.title %></h1>
			<em><%=@portfolio_item.subtitle %></em>
			<p>	<%=@portfolio_item.body %></p>
			<%= link_to 'Back', portfolios_path ,class:"btn btn-sm btn-outline-secondary" %> 
			<%= link_to 'Edit', edit_portfolio_path ,class:"btn btn-sm btn-outline-secondary"if logged_in?(:site_admin)%>
			<hr>
			<h3>Technologies Used:</h3>

		      <% @portfolio_item.technologies.each do |t| %>
		      <p><%= t.name %></p>
		      <% end %>	
		      <% if logged_in?(:site_admin) %>
        	<div class="">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
        	</div>
      <% end %>
		</div>
	</div>
</div>


